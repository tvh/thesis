-- category:
build-type:             Simple
-- extra-source-files:
cabal-version:          >=1.10

executable ray
  main-is:              Main.hs
  hs-source-dirs:       src
  -- other-modules:
  build-depends:
          base                  >= 4.7  && <4.8
        , accelerate            >= 0.15 && <0.16
        , accelerate-cuda       >= 0.15 && <0.16
        , accelerate-llvm       >= 0.15 && <0.16
        , accelerate-llvm-native >= 0.15 && <0.16
        , accelerate-io         >= 0.15 && <0.16
        , criterion             >= 0.8  && <0.9
        , fclabels              >= 2.0  && <2.1
        , gloss-accelerate      >= 1.8 && <1.9

  ghc-options:
        -Wall -threaded -rtsopts -fllvm -optlo-O3 -Odph -fno-liberate-case
        -funfolding-use-threshold100 -funfolding-keeness-factor100

  default-language:    Haskell2010
